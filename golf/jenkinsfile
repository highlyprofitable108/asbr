pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/local/bin"
    }

    stages {
        stage('Setup') {
            steps {
                checkout scm // This automatically checks out the Git repository where the Jenkinsfile is located
                script {
                    sh 'python3 -m venv env'
                    sh 'source env/bin/activate'
                    sh '''
                        python3 -m ensurepip --upgrade
                        pip3 install --upgrade pip
                        pip3 install -r /golf/scripts/requirements.txt
                    '''    
                }
            }
        }

        stage('Execute Python Script') {
            steps {
                withCredentials([string(credentialsId: 'datagolf-token', variable: 'API_KEY')]) {
                    sh '''
                    echo "Executing Python script..."
                    /usr/local/bin/python3 /golf/scripts/data-golf-pull.py
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
    }
}
