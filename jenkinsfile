pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/local/bin"
    }

    stages {
        stage('Setup') {
            steps {
                checkout scm // This automatically checks out the Git repository where the Jenkinsfile is located
                script {
                    sh '''
                        python3 -m venv env
                        source env/bin/activate
                        python3 -m ensurepip --upgrade
                        pip3 install --upgrade pip
                        pip3 install -r requirements.txt
                    '''    
                }
            }
        }

        stage('Execute Python Script') {
            steps {
                withCredentials([string(credentialsId: 'datagolf-token', variable: 'API_KEY')]) {
                    sh '''
                        echo "Executing Python script..."
                        source env/bin/activate
                        python scripts/data-golf-pull.py > output.log 2>&1
                        cat output.log
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
    }
}

